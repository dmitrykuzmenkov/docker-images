FROM alpine:3.6
MAINTAINER Dmitrii Kuzmenkov <dmitrii@kuzmenkov.me>

ENV build_deps="autoconf automake build-base libtool db-dev boost-dev openssl-dev libevent-dev"
RUN apk add --update curl $build_deps && \
  curl -sSL https://github.com/bitcoin/bitcoin/archive/v0.14.1.tar.gz | tar -xzf - && \
  cd bitcoin-0.14.1 && ./autogen.sh && \
  ./configure --prefix=/usr --with-incompatible-bdb && \
  make && make install && \
  apk del $build_deps && rm -fr /var/cache/apk

ENTRYPOINT bitcoind
